{
  "cli": { "version": ">= 11.0.0" },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": false
      }
    },
    "production": {
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": false
      }
    },
    "production-lite": {
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": false
      },
      "env": {
        "EXPO_PUBLIC_ENABLE_MASTERMINDS": "false"
      },
      "prebuildCommand": "node scripts/prebuild-lite.js && npx expo prebuild --clean"
    },
    "preview-lite": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": false
      },
      "env": {
        "EXPO_PUBLIC_ENABLE_MASTERMINDS": "false"
      },
      "prebuildCommand": "node scripts/prebuild-lite.js && npx expo prebuild --clean"
    }
  },
  "submit": {
    "production": {}
  }
}

